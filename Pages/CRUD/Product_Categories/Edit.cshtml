@page
@model ZTPSBD.Pages.CRUD.Product_Categories.EditModel

@{
    ViewData["Title"] = "Edit category";
}

<h1>@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product_Category.id_category" />
            <div class="form-group">
                <label asp-for="Product_Category.name" class="control-label"></label>
                <input asp-for="Product_Category.name" class="form-control" />
                <span asp-validation-for="Product_Category.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
