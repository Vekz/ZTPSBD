@page
@model ZTPSBD.Pages.CRUD.Delivery_Services.EditModel

@{
    ViewData["Title"] = "Edit delivery";
}

<h1>@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Delivery_Service.id_deliverman" />
            <div class="form-group">
                <label asp-for="Delivery_Service.delivery_date" class="control-label"></label>
                <input asp-for="Delivery_Service.delivery_date" class="form-control" />
                <span asp-validation-for="Delivery_Service.delivery_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delivery_Service.Order_id_order" class="control-label"></label>
                <select asp-for="Delivery_Service.Order_id_order" class="form-control" asp-items="ViewBag.Order_id_order"></select>
                <span asp-validation-for="Delivery_Service.Order_id_order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
